{
  "$schema": "https://json-schema.org/draft-07/schema",
  "properties": {
    "personal": {
      "title": "Персональные данные",
      "allOf": [
        {
          "properties": {
            "lastName": {
              "$ref": "#/definitions/lastName"
            },
            "firstName": {
              "$ref": "#/definitions/firstName"
            },
            "hasMiddleName": {
              "$ref": "#/definitions/hasMiddleName"
            }
          },
          "dependencies": {
            "hasMiddleName": {
              "oneOf": [
                {
                  "properties": {
                    "hasMiddleName": {
                      "const": false
                    },
                    "middleName": {
                      "$ref": "#/definitions/middleName"
                    }
                  },
                  "required": [
                    "middleName"
                  ]
                }
              ]
            },
            "middleName": [
              "gender"
            ]
          },
          "required": [
            "lastName",
            "firstName"
          ]
        },
        {
          "properties": {
            "gender": {
              "$ref": "#/definitions/gender"
            },
            "phone": {
              "$ref": "#/definitions/phone"
            },
            "email": {
              "$ref": "#/definitions/email"
            },
            "sopdConfirmed": {
              "$ref": "#/definitions/sopdConfirmed"
            }
          },
          "required": [
            "gender",
            "phone",
            "email",
            "sopdConfirmed"
          ]
        }
      ]
    },
    "identity": {
      "title": "Паспортные данные гражданина РФ",
      "description": "Увеличьте вероятность одобрения в два раза, заполнив шаг полностью",
      "properties": {
        "passportSeries": {
          "title": "Серия",
          "type": "string",
          "pattern": "[0-9]{2} [0-9]{2}",
          "maxLength": 5,
          "examples": [
            "12 34"
          ]
        },
        "passportNumber": {
          "title": "Номер",
          "type": "string",
          "maxLength": 6,
          "pattern": "[0-9]{6}",
          "examples": [
            "123456"
          ]
        },
        "passportIssuedDate": {
          "title": "Дата выдачи",
          "type": "string",
          "format": "date",
          "examples": [
            "21.12.2012"
          ]
        },
        "passportIssuedCode": {
          "title": "Код подразделения",
          "type": "string",
          "pattern": "[0-9]{3}-[0-9]{3}",
          "maxLength": 7,
          "examples": [
            "123-456"
          ]
        },
        "passportIssuedBy": {
          "title": "Кем выдан",
          "description": "Укажите точно как в паспорте. Если вводимый текст не поместится в поле - используйте сокращения.",
          "type": "string"
        },
        "birthDate": {
          "title": "Дата рождения",
          "type": "string",
          "format": "date",
          "examples": [
            "21.12.2012"
          ]
        },
        "passportBirthPlace": {
          "title": "Место рождения",
          "description": "Укажите точно как в паспорте",
          "type": "string"
        },
        "passportRegion": {
          "title": "Регион регистрации",
          "description": "Данные о регистрации вы найдете на 5 странице паспорта",
          "type": "string"
        },
        "workRegion": {
          "title": "Рабочий регион",
          "description": "",
          "type": "string"
        }
      },
      "required": [
        "passportSeries",
        "birthDate",
        "passportBirthPlace",
        "passportIssuedBy",
        "passportIssuedCode",
        "passportIssuedDate",
        "passportNumber",
        "passportRegion",
        "workRegion"
      ]
    },
    "employment": {
      "title": "Сведения о занятости и образовании",
      "description": "Получите +25% к вероятности одобрения, заполнив шаг полностью",
      "properties": {
        "education": {
          "title": "Образование",
          "type": "string",
          "anyOf": [
            {
              "title": "Неполное среднее",
              "const": "US"
            },
            {
              "title": "Среднее",
              "const": "S"
            },
            {
              "title": "Среднее специальное",
              "const": "SS"
            },
            {
              "title": "Неполное высшее",
              "const": "UH"
            },
            {
              "title": "Высшее",
              "const": "H"
            },
            {
              "title": "Несколько высших",
              "const": "HH"
            },
            {
              "title": "Ученая степень / MBA",
              "const": "A"
            }
          ]
        },
        "employed": {
          "title": "Тип занятости",
          "type": "string",
          "anyOf": [
            {
              "title": "Работаю по найму",
              "const": "A"
            },
            {
              "title": "Работаю на себя",
              "const": "B"
            },
            {
              "title": "Не работаю",
              "const": "C"
            }
          ],
          "default": "A"
        }
      },
      "dependencies": {
        "employed": {
          "oneOf": [
            {
              "properties": {
                "employed": {
                  "const": "A"
                },
                "organizationName": {
                  "$ref": "#/definitions/organizationName"
                },
                "workPost": {
                  "$ref": "#/definitions/workPost"
                },
                "workPhone": {
                  "$ref": "#/definitions/workPhone"
                },
                "mainIncome": {
                  "$ref": "#/definitions/mainIncome"
                }
              },
              "required": [
                "mainIncome",
                "organizationName",
                "workPhone",
                "workPost"
              ]
            },
            {
              "properties": {
                "employed": {
                  "const": "B"
                },
                "employedType": {
                  "title": "Выберите подходящее",
                  "type": "string",
                  "anyOf": [
                    {
                      "title": "Индивидуальный предприниматель",
                      "const": "entrepreneur"
                    },
                    {
                      "title": "Зарегистрированный самозанятый",
                      "const": "self_employed_officially"
                    },
                    {
                      "title": "Самозанятый неофициально",
                      "const": "self_employed_not_officially"
                    }
                  ]
                }
              },
              "dependencies": {
                "employedType": {
                  "oneOf": [
                    {
                      "properties": {
                        "employedType": {
                          "const": "entrepreneur"
                        },
                        "organizationName": {
                          "title": "Введите ФИО Индивидуального предпринимателя",
                          "type": "string",
                          "examples": [
                            "Например, ИП им. Пирогова"
                          ]
                        },
                        "workPhone": {
                          "$ref": "#/definitions/workPhone"
                        },
                        "mainIncome": {
                          "$ref": "#/definitions/mainIncome"
                        }
                      },
                      "required": [
                        "workPhone",
                        "mainIncome",
                        "organizationName",
                        "employedType"
                      ]
                    },
                    {
                      "properties": {
                        "employedType": {
                          "description": "Вы являетесь официально зарегистрированным самозанятым и уплачиваете налог на профессиональный доход",
                          "const": "self_employed_officially"
                        },
                        "organizationName": {
                          "title": "Наименование занятости",
                          "type": "string"
                        },
                        "organizationInn": {
                          "title": "ИНН Физического лица",
                          "type": "string",
                          "examples": [
                            "526317984689"
                          ]
                        },
                        "workPhone": {
                          "$ref": "#/definitions/workPhone"
                        },
                        "mainIncome": {
                          "$ref": "#/definitions/mainIncome"
                        }
                      },
                      "required": [
                        "employedType",
                        "organizationName",
                        "mainIncome",
                        "workPhone",
                        "organizationInn"
                      ]
                    },
                    {
                      "properties": {
                        "employedType": {
                          "const": "self_employed_not_officially"
                        },
                        "organizationName": {
                          "title": "Наименование занятости",
                          "type": "string"
                        },
                        "organizationInn": {
                          "title": "ИНН Физического лица",
                          "type": "string",
                          "examples": [
                            "526317984689"
                          ]
                        },
                        "workPhone": {
                          "$ref": "#/definitions/workPhone"
                        },
                        "mainIncome": {
                          "$ref": "#/definitions/mainIncome"
                        }
                      },
                      "required": [
                        "employedType",
                        "organizationName",
                        "mainIncome",
                        "workPhone",
                        "organizationInn"
                      ]
                    }
                  ]
                }
              }
            },
            {
              "properties": {
                "employed": {
                  "const": "C"
                }
              }
            }
          ]
        }
      }
    },
    "getMoney": {
      "title": "Какую сумму хотите?",
