{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Сведения о себе",
  "description": "Укажите все имеющиеся сведения",
  "type": "object",
  "properties": {
    "fullName": {
      "type": "string",
      "title": "ФИО",
      "description": "Укажите имя, фамилию, отчество"
    },
    "birthDate": {
      "type": "string",
      "format": "date",
      "title": "Дата рождения",
      "description": "Когда у вас ДР?"
    },
    "meetDate": {
      "type": "string",
      "format": "date-time",
      "title": "Дата рождения",
      "description": "Когда у вас ДР?"
    },
    "about": {
      "type": "string",
      "contentMediaType": "text/plain",
      "title": "О себе",
      "description": "Расскажите что-то интересное"
    },
    "isMarried": {
      "type": "boolean",
      "title": "Вы в браке?",
      "description": "Информация необходима для получения документа",
      "const": true
    },
    "children": {
      "title": "Дети",
      "description": "Укажите всех ваших детей",
      "type": "array",
      "minItems": 3,
      "items": {
        "title": "ФИО ребенка",
        "description": "Скажите, как его зовут?",
        "type": "string"
      }
    },
    "hobbies2": {
      "type": "array",
      "items": {
        "type": "string",
        "anyOf": [
          {
            "title": "Прогулки",
            "const": "1"
          },
          {
            "title": "Прогулки 2",
            "description": "С описанием",
            "const": "2"
          },
          {
            "title": "Прогулки 3",
            "description": "С описанием",
            "const": "3"
          },
          {
            "title": "Прогулки 4",
            "const": "4"
          }
        ]
      },
      "uniqueItems": true,
      "minItems": 3
    },
    "hobbies": {
      "type": "array",
      "items": {
        "enum": ["Прогулки", "Катание на велосипеде", "Тренировки", "Бег"]
      },
      "uniqueItems": true
    },
    "documents": {
      "title": "Документы",
      "description": "Укажите весь список имеющихся документов",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Документ",
        "type": "object",
        "properties": {
          "documentName": {
            "title": "Тип документа",
            "description": "Выберите документ",
            "enum": ["Паспорт", "Свидетельство о рождении", "Свидетельство о браке"]
          },
          "serialNumber": {
            "title": "Серия и номер",
            "description": "Укажите точно, как в документе",
            "type": "string"
          },
          "scan": {
            "readOnly": false,
            "title": "Скан документа",
            "description": "Прикрепите отсканированный документ (.pdf)",
            "type": "string",
            "format": "data-url",
            "contentMediaType": "application/pdf"
          }
        },
        "required": ["serialNumber"]
      }
    },
    "information": {
      "type": "null",
      "title": "Дополнительные сведения",
      "description": "Сообщите их при встрече с представителем"
    }
  }
}
