{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "color": {
      "type": "string",
      "format": "color",
      "examples": [
        "#000000",
        "#000",
        "rgb(0,0,0)",
        "black"
      ],
      "default": "#000000"
    },
    "data-url": {
      "type": "string",
      "format": "data-url",
      "examples": ["data:image/png;name=pixel.png;base64,iVBORw0KGgo"],
      "default": "data:image/png;name=pixel.png;base64,iVBORw0KGgo"
    },
    "date": {
      "type": "string",
      "format": "date",
      "examples": ["2020-12-31"],
      "default": "2020-12-31"
    },
    "date-time": {
      "type": "string",
      "format": "date-time",
      "examples": ["2020-12-31T00:00:00"],
      "default": "2020-12-31T00:00:00"
    },
    "email": {
      "type": "string",
      "format": "email",
      "examples": ["username@example.com"],
      "default": "username@example.com"
    },
    "hostname": {
      "type": "string",
      "format": "hostname",
      "examples": ["example.com"],
      "default": "example.com"
    },
    "ipv4": {
      "type": "string",
      "format": "ipv4",
      "examples": ["255.255.255.255"],
      "default": "255.255.255.255"
    },
    "ipv6": {
      "type": "string",
      "format": "ipv6",
      "examples": ["2001:0db8:11a3:09d7:1f34:8a2e:07a0:765d"],
      "default": "2001:0db8:11a3:09d7:1f34:8a2e:07a0:765d"
    },
    "json-pointer": {
      "type": "string",
      "format": "json-pointer",
      "examples": ["/path/to/property"],
      "default": "/path/to/property"
    },
    "password": {
      "type": "string",
      "format": "password",
      "examples": ["BAD_PASSWORD_123"],
      "default": "BAD_PASSWORD_123"
    },
    "regex": {
      "type": "string",
      "format": "regex",
      "examples": ["^[A-Za-z0-9]$"],
      "default": "^[A-Za-z0-9]$"
    },
    "uri": {
      "type": "string",
      "format": "uri",
      "examples": ["https://example.com"],
      "default": "https://example.com"
    },
    "uuid": {
      "type": "string",
      "format": "uuid",
      "examples": ["fcc18103-f6c4-4852-b332-89384556a9f4"],
      "default": "fcc18103-f6c4-4852-b332-89384556a9f4"
    }
  }
}
