{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Address",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "streetAddress": {
          "title": "Street",
          "type": "string"
        },
        "city": {
          "title": "City",
          "type": "string"
        },
        "state": {
          "title": "State",
          "type": "string"
        }
      },
      "required": ["streetAddress", "city", "state"]
    }
  ],
  "properties": {
    "streetAddress": true,
    "city": true,
    "state": true,
    "type": {
      "enum": ["residential", "business"]
    }
  },
  "required": ["type"],
  "default": {
    "streetAddress": "1600 Pennsylvania Avenue NW",
    "city": "Washington",
    "state": "DC",
    "type": "business"
  }
}
